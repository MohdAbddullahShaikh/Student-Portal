<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

    <hibernate-mapping>
    <class name="com.sterling.dto.Banner" table="Banner" schema="student_portal">
    
    <id name="id">
    <generator class="increment"></generator>
    </id>
    
    <property name="title"></property>
    <property name="content" length="5000"></property>
    <property name="imgName"></property>
    
    
    </class>
    </hibernate-mapping>