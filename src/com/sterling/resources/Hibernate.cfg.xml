<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

	
	<hibernate-configuration>
	<session-factory>
	
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/student_portal</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>

		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql"></property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<mapping resource="com/sterling/resources/Student.hbm.xml"/>
		<mapping resource="com/sterling/resources/Post.hbm.xml"/>
		<mapping resource="com/sterling/resources/Announcement.hbm.xml"/>
		<mapping resource="com/sterling/resources/Course.hbm.xml"/>
		<mapping resource="com/sterling/resources/StudentResources.hbm.xml"/>
		<mapping resource="com/sterling/resources/StudentResult.hbm.xml"/>
		<mapping resource="com/sterling/resources/Slider.hbm.xml"/>
		<mapping resource="com/sterling/resources/Banner.hbm.xml"/>
	
	</session-factory>
	</hibernate-configuration>